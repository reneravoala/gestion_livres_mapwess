{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ livre.nbPages }}</td>
            </tr>
            <tr>
                <th>Auteurs</th>
                <td>{{ livre.auteurs }}</td>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/img/' ~ livre.urlImage) }}" alt="" class="w-50"></td>
            </tr>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('livre_index') }}" class="btn btn-primary">Revenir Ã  la liste</a>

    {% if app.user.id == livre.user.id %}
    <a href="{{ path('livre_edit', {'id': livre.id}) }}" class="btn btn-secondary" title="Modifier"><span class="fa fa-edit"></span></a>

    {{ include('livre/_delete_form.html.twig') }}
    {% endif %}
    
{% endblock %}
